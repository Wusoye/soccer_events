                    var res;
                    if(parseFloat(my_number) > 0){
                        res = "table-success";
                    }
                    else if(parseFloat(my_number) < 0){
                        res = "table-danger";
                    }
                    else if(parseFloat(my_number) < -1 || parseFloat(my_number) > 1){
