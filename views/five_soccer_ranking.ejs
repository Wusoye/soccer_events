<%- include('include/header') -%>
<nav>
    <div class="nav nav-pills nav-fill" id="nav-tab" role="tablist">
        <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav_club" role="tab"
            aria-controls="nav-home" aria-selected="true">GLOBAL CLUB</a>
        <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav_intl" role="tab"
            aria-controls="nav-profile" aria-selected="false">INTERNATIONAL</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav_club" role="tabpanel" aria-labelledby="nav-home-tab">

        <table class="table table-striped table-bordered border-secondary" data-toggle="table" data-search="true" data-pagination="true">
            <thead>
                <tr>
                    <th scope="col">Rank</th>
                    <th scope="col">League</th>
                    <th scope="col">Teams</th>
                    <th scope="col">Goals Avg.</th>                 
                </tr>
            </thead>
            <tbody>
                <% data_club.forEach(element=> { %>
                    <tr>
                        <td>
                            <%= element.rank %> - <%= element.prev_rank %>
                        </td>
                        <td>
                            <%= element.league %>
                        </td>
                        <td>
                            <%= element.name %>
                        </td>
                        <td>
                            <%= (element.off / element.def).toFixed(2) %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </div>
    <div class="tab-pane fade" id="nav_intl" role="tabpanel" aria-labelledby="nav-profile-tab">

        <table class="table table-striped table-bordered border-secondary" data-toggle="table" data-search="true" data-pagination="true">
            <thead>
                <tr>
                    <th scope="col">Rank</th>
                    <th scope="col">Teams</th>
                    <th scope="col">Goals Avg.</th>                 
                </tr>
            </thead>
            <tbody>
                <% data_intl.forEach(element=> { %>
                    <tr>
                        <td>
                            <%= element.rank %>
                        </td>
                        <td>
                            <%= element.name %>
                        </td>
                        <td>
                            <%= (element.off / element.def).toFixed(2) %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </div>
</div>

<%- include('include/footer') -%>