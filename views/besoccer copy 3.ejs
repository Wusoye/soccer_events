function percent_to_odd(percent){
    return 1 / percent * 100;
}

function proba_to_odd(proba){
    return 1 / proba;
}

function dropping_me(odd_arrive, odd_depart){
    return parseFloat(((odd_arrive - odd_depart)/(odd_depart - 1)*100).toFixed(2));
}



